<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LightGreyText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/lightGrey</item>
    </style>
    <style name="LightGreyInput" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="android:backgroundTint">@color/lightGrey</item>
    </style>
    <style name="LightGreyRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/lightGrey</item>
    </style>
    <style name="LightGreyCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/lightGrey</item>
    </style>
    <style name="ChatListUserName" parent="LightGreyText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/ChatListUserNameTextSize</item>
    </style>
    <style name="ChatToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/lightGrey</item>
    </style>
    <style name="ChatMessage" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ChatMessageTime" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">@dimen/ChatMessageTimeTextSize</item>
        <item name="android:layout_marginLeft">@dimen/ChatMessageTimeMarginLeftRight</item>
        <item name="android:layout_marginRight">@dimen/ChatMessageTimeMarginLeftRight</item>
    </style>
    <style name="ChatMessageCard">
        <item name="cardCornerRadius">@dimen/ChatMessageCardBorderRadius</item>
        <item name="cardElevation">@dimen/ChatMessageCardElevation</item>
        <item name="contentPadding">@dimen/ChatMessageCardPadding</item>
        <item name="useCompatPadding">false</item>
    </style>
</resources>